# Resume Generator API Configuration
# Copy this file to .env and customize as needed

# OpenAI API Configuration
OPENAI_API_BASE_URL=http://localhost:1234/v1
# OPENAI_API_KEY=sk-your-api-key-here  # Optional for local APIs, required for remote APIs

# Qdrant Configuration  
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=resume

# API Server Configuration
API_HOST=127.0.0.1
API_PORT=8080
DEBUG=True

# Model Configuration
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
MAX_TOKENS=500
TEMPERATURE=0.7
SEARCH_LIMIT=15

# Resume Section Limits
MAX_WORK_ENTRIES=3
MAX_SKILLS_ENTRIES=5
MAX_PROJECTS_ENTRIES=2

# JSON Resume Schema
RESUME_SCHEMA_URL=https://raw.githubusercontent.com/jsonresume/resume-schema/v1.0.0/schema.json

# Output File Configuration
OUTPUT_DIR=output
SAVE_OUTPUT_FILES=true

# Streaming Configuration
ENABLE_STREAMING=true

# Reasoning Output Configuration
SAVE_REASONING_FILES=true