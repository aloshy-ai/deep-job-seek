# OpenAI API Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE_URL=https://api.openai.com/v1

# For local LM Studio usage (alternative to OpenAI)
# Use host.docker.internal for Docker containers to access host services
# OPENAI_API_BASE_URL=http://host.docker.internal:1234/v1
# OPENAI_API_KEY=not-needed

# Qdrant Configuration (Docker defaults work for most cases)
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# API Configuration
API_PORT=8000
DEBUG=false

# Model Configuration  
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
MAX_TOKENS=500
TEMPERATURE=0.7

# Resume Generation Limits
MAX_WORK_ENTRIES=3
MAX_SKILLS_ENTRIES=5
MAX_PROJECTS_ENTRIES=2